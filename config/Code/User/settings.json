{
    // C/C++ settings
    "C_Cpp.intelliSenseEngine": "Default",
    "C_Cpp.updateChannel": "Insiders",,
    //"C_Cpp.inactiveRegionOpacity": 1.0,
    //"C_Cpp.inactiveRegionForegroundColor": "#c0c0c0",

    //Python settings
    //"python.pythonPath": "/usr/bin/python3.6",
    "python.linting.enabled": true,
    //"python.linting.pylintPath": "/usr/local/bin/pylint",
    "python.linting.pylintArgs": [
        "--disable=C0103, C0111, W0401, W0614, E1101, W1202",
        "--max-line-length=140"
    ],

    "python.autoComplete.addBrackets": true,


    // Extension and editor preferences
    "diffEditor.ignoreTrimWhitespace": false,

    "files.insertFinalNewline": true,
    // "editor.fontFamily": "Fira Mono",
    "editor.fontFamily": "Hack",
    "editor.renderWhitespace": "boundary",
    "editor.fontSize": 14,
    "editor.rulers": [140],
    "editor.roundedSelection": false,
    "editor.dragAndDrop": false,
    "editor.minimap.enabled": false,
    "editor.detectIndentation": false,
    //"explorer.openEditors.visible": 0,

    "editor.trimAutoWhitespace": true,
    "files.trimTrailingWhitespace": true,

    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        ".vscode": true,
        "**/__pycache__": true,
        "**/**/*.pyc": true
    },
    //"files.autoSave": "afterDelay",
    "files.associations": {
        "*.exp": "tcl"
    },

    "terminal.integrated.fontFamily": "Inconsolata-dz for Powerline",
    "terminal.integrated.fontSize": 12,
    "window.zoomLevel": 0,
    "terminal.integrated.rendererType": "dom",
    "explorer.confirmDragAndDrop": false,

    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,

    "window.titleBarStyle": "custom",
    "breadcrumbs.enabled": true,
    "editor.renderControlCharacters": true,
    "workbench.colorTheme": "One Dark Pro Bold",
    "update.channel": "manual",
    "http.proxyStrictSSL": false,
}
